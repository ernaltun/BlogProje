@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Sizler için yüzlerce yazan yazarlarımızı daha yakından tanımak istermisiniz?</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-md-2">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTaNpVofPHwJTS78BNCm7AsqCMFQ51l8u5jhw&usqp=CAU" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>Biz kimiz</h2>
                @foreach (var item in Model)
                {
                    <p>@item.AboutContent1</p>
                }
                <ul class="ul-check list-unstyled success">
                    <li>Hergün 10 yeni blog</li>
                    <li>15 den fazla kategori</li>
                    <li>21 farklı dinamik yazar</li>
                    <li>Günlük 45.000 tekil okuma</li>
                    <li>27 farklı ülkeden takipçi</li>
                    <li>Sosyal medyada 325k abone</li>

                </ul>
            </div>
        </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Neler Yapıyoruz</h2>

                    <p class="mb-4">@item.AboutContent2</p>
                    
                    <ul class="ul-check list-unstyled success">
                        <li>Film dizi yorumları</li>
                        <li>Fransada paris ve lyondan yazılar</li>
                        <li>programlama dilleri hakkında içerikler</li>
                    </ul>
                </div>
            }
            </div>
    </div>
</div>
@Html.Action("AddMail", "MailSubscribe")
@Html.Action("Footer", "About")