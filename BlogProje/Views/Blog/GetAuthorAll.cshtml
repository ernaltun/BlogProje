@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "GetAuthorAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazarlarımız</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                             src="@item.AuthorImage"
                             alt="User profile picture">
                    </div>

                    <h3 class="profile-username text-center">@item.AuthorName</h3>

                    <p class="text-muted text-center">Yazar</p>

                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Toplam Yazı Sayısı</b> <a class="float-right">12</a>
                        </li>
                        <!-- Diğer list-group-item'lar -->
                    </ul>

                    <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    }
</div>

